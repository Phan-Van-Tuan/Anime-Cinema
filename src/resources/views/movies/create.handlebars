<div class="mt-4 mb-4">

    <h3 class="text-primary">Create Anime</h3>

    <form method="POST" action="/movies/store" enctype="multipart/form-data">
        <small> * Please enter all of the following fields:</small>
        <hr>
        <div class="form-group">
            <input type="text" size="30" class="form-control" id="name" name="name" placeholder=" * Name"
                required="required" autocomplete="off" autofocus>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="author" name="author" placeholder=" * Author" autocomplete="off"
                required>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" id="runtime" name="runtime" placeholder=" * Runtime" required>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" id="evaluate" name="evaluate" placeholder=" * Evaluate" min="0"
                max="10" step="0.1" required>
        </div>
