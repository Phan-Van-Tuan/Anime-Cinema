        <hr>
        <div class="form-group">
            <label for="note"><strong>Note:</strong></label>
            <select class="form-control" name="note">
                <option value="P">P</option>
                <option value="C13">C13</option>
                <option value="C16">C16</option>
                <option value="C18">C18</option>
            </select>
        </div>
        <div class="form-group">
            <label for="genre"><strong>Genre:</strong>  (Hold the Ctrl key and tick multiple times)</label>
            <select class="genre form-control" name="genre" multiple>
                <option value="action">Action</option>
                <option value="drama">Drama</option>
                <option value="comedy">Comedy</option>
            </select>
        </div>
        <div class="form-group">
            <label for="released"><strong>Released:</strong></label>
            <input type="date" id="released" class="form-control" name="released" required>
        </div>
        <div class="form-group">
            <label for="image"><strong>Image:</strong></label>
            <input type="file" id="image" class="form-short-control" accept=".jpg, .png" name="image" required />
        </div>
        <div class="form-group">
            <textarea type="text" class="col-12" name="description" id="description" placeholder=" * Description"
                rows="8"></textarea>
        </div>

        <div class="">
            <button type="submit" class="btn btn-primary" name="submit">Create</button>
            <input type="reset" value="reset" id="btn-reset" class="reset btn btn-primary ml-3">
        </div>
    </form>
