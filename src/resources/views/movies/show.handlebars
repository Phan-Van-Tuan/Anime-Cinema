<div class="container mt-4">
  <h2 id="header-title">Movie Details</h2>
  <hr color="red" style="height: 1px;">
  <div class="row">
    <div class="col-md-4 to-remove">
      <img src="{{movie.image}}" alt="{{movie.name}}" class="img-fluid">
    </div>

    <div class="col-md-8">
      <h3>{{movie.name}}</h3>
      <p class="text-muted">by {{movie.author}}</p>
      <hr>
      <span class="badge badge-success label-note">{{movie.note}}</span>
      <span class="text-note">alo</span>

      <h4 class="mt-4">Related Info</h4>
      <ul>
        <li><b>Genre:</b> {{movie.genre}}</li>
        <li><b>Release Date:</b> {{dateFormat movie.released 'en-US'}}</li>
        <li><b>Runing Time:</b> {{movie.runtime}} miutes</li>
        {{!-- <li><b>Rating:</b> {{movie.rating}}</li> --}}
        {{!-- <li><b>Director:</b> {{movie.director}}</li> --}}
        <li><b>Evaluate:</b> {{movie.evaluate}}</li>
      </ul>
      <div class="d-flex mt-2">
        <a href="/booking/choose-cinema?name={{movie.name}}" class="btn btn-primary booking-btn">Booking</a>
        <a href="#trailer" class="btn btn-danger ml-4">Trailer</a>
        <button class="like-button">
          <span data-component="text">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor"
              style="display: inline-block; vertical-align: text-bottom;">
              <path
                d="M8.834.066c.763.087 1.5.295 2.01.884.505.581.656 1.378.656 2.3 0 .467-.087 1.119-.157 1.637L11.328 5h1.422c.603 0 1.174.085 1.668.333.508.254.911.679 1.137 1.2.453.998.438 2.447.188 4.316l-.04.306c-.105.79-.195 1.473-.313 2.033-.131.63-.315 1.209-.668 1.672C13.97 15.847 12.706 16 11 16c-1.848 0-3.234-.333-4.388-.653-.165-.045-.323-.09-.475-.133-.658-.186-1.2-.34-1.725-.415A1.75 1.75 0 0 1 2.75 16h-1A1.75 1.75 0 0 1 0 14.25v-7.5C0 5.784.784 5 1.75 5h1a1.75 1.75 0 0 1 1.514.872c.258-.105.59-.268.918-.508C5.853 4.874 6.5 4.079 6.5 2.75v-.5c0-1.202.994-2.337 2.334-2.184ZM4.5 13.3c.705.088 1.39.284 2.072.478l.441.125c1.096.305 2.334.598 3.987.598 1.794 0 2.28-.223 2.528-.549.147-.193.276-.505.394-1.07.105-.502.188-1.124.295-1.93l.04-.3c.25-1.882.189-2.933-.068-3.497a.921.921 0 0 0-.442-.48c-.208-.104-.52-.174-.997-.174H11c-.686 0-1.295-.577-1.206-1.336.023-.192.05-.39.076-.586.065-.488.13-.97.13-1.328 0-.809-.144-1.15-.288-1.316-.137-.158-.402-.304-1.048-.378C8.357 1.521 8 1.793 8 2.25v.5c0 1.922-.978 3.128-1.933 3.825a5.831 5.831 0 0 1-1.567.81ZM2.75 6.5h-1a.25.25 0 0 0-.25.25v7.5c0 .138.112.25.25.25h1a.25.25 0 0 0 .25-.25v-7.5a.25.25 0 0 0-.25-.25Z">
              </path>
            </svg>
            <span class="">like</span>
            <span class="likeCount">0</span>
          </span>
        </button>
      </div>
    </div>
  </div>
  <hr color="red" style="height: 1px;">
  <div class="row mt-4">
    <div class="col-12 m-auto">
      <h4>Description</h4>
      <p>{{movie.description}}</p>
    </div>
  </div>
  <hr color="red" style="height: 1px;">
  <div class="trailer" id="trailer">
    <h4>Trailer</h4>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/j9KnHA9BnuQ" title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </div>

</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var labelNote = $('.label-note');
    var textNote = $('.text-note');

    // tô màu cho các nhãn note
    for (let i = 0; i < labelNote.length; i++) {
      switch (labelNote[i].outerText) {
        case 'c 13': labelNote[i].classList.add('badge-warning'); textNote.text(" - Only for people over 13 years old"); break;
        case 'c 16': labelNote[i].classList.add('badge-orange'); textNote.text(" - Only for people over 16 years old"); break;
        case 'c 18': labelNote[i].classList.add('badge-danger'); textNote.text(" - Only for people over 18 years old"); break;
        default: labelNote[i].classList.add('badge-success'); textNote.text(" - No age limit"); break;
      }
    }

    // toggle btn like - sự kiện nổi bọt
    $(".like-button").on("click", function () {
      // Lấy nội dung của thẻ cha và in ra console
      this.classList.toggle('active');
    });
  });

</script>